<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/rank_rank"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:textColor="@color/word_0"
        android:textSize="@dimen/text_rank_head"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />

    <ImageView
        android:id="@+id/rank_logo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/rank_rank"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/rank_name"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:gravity="left|center"
        android:textColor="@color/word_0"
        android:textSize="@dimen/text_rank_head"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/rank_logo"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Barcelona" />

    <TextView
        android:id="@+id/rank_turn"
        android:layout_width="@dimen/text_rank_head_width"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/word_0"
        android:textSize="@dimen/text_rank_head"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/rank_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="28" />

    <TextView
        android:id="@+id/rank_num1"
        android:layout_width="@dimen/text_rank_head_width"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:textColor="@color/word_0"
        android:textSize="@dimen/text_rank_head"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/rank_turn"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="20" />

    <TextView
        android:id="@+id/rank_num2"
        android:layout_width="@dimen/text_rank_head_width"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:textColor="@color/word_0"
        android:textSize="@dimen/text_rank_head"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/rank_num1"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="6" />

    <TextView
        android:id="@+id/rank_num3"
        android:layout_width="@dimen/text_rank_head_width"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:textColor="@color/word_0"
        android:textSize="@dimen/text_rank_head"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/rank_num2"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2" />

    <TextView
        android:id="@+id/rank_rate"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/word_0"
        android:textSize="@dimen/text_rank_head"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/rank_num3"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="73/27" />

    <TextView
        android:id="@+id/rank_points"
        android:layout_width="@dimen/text_rank_head_width"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:textColor="@color/word_0"
        android:textSize="@dimen/text_rank_head"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="66" />

    <!-- 横向分割线 -->
    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_margin="5dp"
        android:background="#EEEEEE"
        app:layout_constraintTop_toBottomOf="@id/rank_logo" />

</android.support.constraint.ConstraintLayout>